<Window x:Class="progressBarTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:progressBarTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ProgressBar x:Name="prograssBar" HorizontalAlignment="Stretch" Margin="10,231,10,10" VerticalAlignment="Stretch" Maximum="100" Minimum="0" Value="0" ValueChanged="ProgressBar_ValueChanged"/>
        <Button x:Name="button" Content="Press me" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="131" Height="49" Click="button_Click"/>
        <Button x:Name="button1" Content="Press me too" HorizontalAlignment="Left" Margin="392,10,0,0" VerticalAlignment="Top" Width="115" Height="49" Click="button1_Click"/>
    </Grid>
</Window>
